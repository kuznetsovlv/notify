{
	"parser": "babel-eslint",
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended"
	],
	"env": {
		"es6": true,
		"browser": true,
		"node": true
	},
	"plugins": [
		"react",
		"jsx-a11y",
		"promise"
	  ],
	"rules": {
		"no-unused-vars": "warn",
		"no-extra-semi": "warn",
		"require-yield": "warn",
		"react/display-name": "off",
		"no-plusplus": "off",
	},
}